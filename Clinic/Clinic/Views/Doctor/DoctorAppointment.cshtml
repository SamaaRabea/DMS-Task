@using Clinic.DAL
@model List<Appointment>
@{
    ViewData["Title"] = "DoctorAppointment";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Dr : @ViewBag.Doctor.Name's Appointments</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Patient Name
                </th>

                <th>
                    Appointment Date
                </th>
                <th>
                    Appointment Time
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td width="30%">
                        @appointment.Patient.Name
                    </td>
                    <td width="50%">
                        @appointment.Date.ToShortDateString()
                    </td>
                    <td width="30%">
                        @appointment.Time.ToShortTimeString()
                    </td>
                   
                </tr>
            }
        </tbody>

    </table>
</div>
<a asp-controller="Doctor" asp-action="Index" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Back
</a>

